        <%
=begin%>
        <div><%= trip.likes %></div>
        <div><%= trip.author_id %></div>
        <%
=end%>
    </a>
    <%
=begin%>

    <div><%= link_to 'Show', trip %></div>
    <div><%= link_to 'Edit', edit_trip_path(trip) %></div>
    <div><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    <%
=end%>
    <% end %>

</div>

<div class="button-cta-container">
    <a href="/trips/new" class="bn9"><button class="bn9"><span>Ajouter un parcours</span></button></a>
   
</div>

</div>