<%= form_with(model: trip) do |form| %>
<% if trip.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

    <ul>
        <% trip.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
</div>

<div class="field">
    <%= form.label :distance %>
    <%= form.text_field :distance %>
</div>

<div class="field">
    <%= form.label :likes %>
    <%= form.number_field :likes %>
</div>

<div class="field">
    <%= form.label :author_id %>
    <%= form.collection_select(:author_id, Author.all, :id, :username, {:prompt => 'Select the author'}, :selected => @trip.author_id ) %>
    <%= link_to 'New author', new_author_path, class: "has-text-danger has-text-weight-semibold"%>
</div>

<div class="field">
    <%= form.label :path %>
    <%= form.text_area :path %>
</div>

<div class="actions">
    <%= form.submit %>
</div>
<% end %>